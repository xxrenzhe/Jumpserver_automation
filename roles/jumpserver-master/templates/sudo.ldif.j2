dn: ou=Sudoers,dc={{ ldap_dc_name }},dc=com
objectClass: top
objectClass: organizationalUnit
ou: Sudoers

dn: cn=defaults,ou=Sudoers,dc={{ ldap_dc_name }},dc=com
objectClass: top
objectClass: sudoRole
cn: defaults
sudoOption: !visiblepw
sudoOption: always_set_home
sudoOption: env_reset
sudoOption: requiretty

dn: cn=testuser,ou=Sudoers,dc={{ ldap_dc_name }},dc=com
objectClass: top
objectClass: sudoRole
cn: testuser
sudoCommand: ALL
sudoHost: ALL
sudoOption: !authenticate
sudoRunAsUser: ALL
sudoUser: testuser
